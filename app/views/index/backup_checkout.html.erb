<% provide(:title, 'Check-Out') %>
<html>
	<style>
		#checkout {
			width: 600px;
			height: 100px;
			margin: 0 auto;
			background-color: #CCC;
			border: black;
			border-style: solid;
			border-width: 2px;		
		}
		
		#checkout table {
			padding-left: 20px;
		}
		
		#labels {
			font-weight: bold;
		}
		
		#labels td {
			padding-left: 5px;
		}
		
		h1 {
			text-align: center;
			font-family: arial;
			font-size: 20px;
		}
		
		#navbar {
			width: 600px;
			height: 100px;
			margin: 0 auto;
		}
	</style>

	<br />
	<header id="logo"></header>
	<h1>Laptop Check-Out Form</h1>
	
	<form id="checkout" name="checkout">
		<table>
			<tr><br /></tr>
			<tr id="labels">
				<td>Name</td>
				<td></td>
				<td>Scan Code</td>
			</tr>
			
			<tr>
				<td><input type="text" name="UserName" placeholder="First Name"/></td>
				<td><input type="text" name="UserName" placeholder="Last Name"/></td>
				<td><input type="text" name="ScanCode"/></td>
				<td><button>Checkout</button></td>
			</tr>
		</table>
	</form>
	
	<body OnLoad="document.checkout.ScanCode.focus()" />
	
	<br />
	
	<div id="navbar">
		<a href="/"><button id="small_button">Return</button>
	</div>
</html>