<% provide(:title, 'New User') %>
	<style>
		#checkout {
			width: 400px;
			height: 140px;
			margin: 0 auto;
			background-color: #CCC;
			border: black;
			border-style: solid;
			border-width: 2px;		
		}
		
		#checkout table {
			margin: 0 auto;
		}
		
		#labels {
			font-weight: bold;
		}
		
		#labels td {
			padding-left: 5px;
		}
		
		h1 {
			text-align: center;
			font-family: arial;
			font-size: 20px;
		}
		
		#navbar {
			width: 0 auto;
			height: 100px;
			margin: 0 auto;
			text-align: center;
		}
	</style>

	<br />
	
	<header id="logo"></header>
	
<h1>New User</h1>
	<form id="checkout" name="checkout">
	    <%= form_for(@user) do |f| %>
	    	<%= render 'shared/error_messages' %>
				<table>
					<tr id="labels">
				      <td>Name</td>
			      	</tr>
			      	
			      	<tr>
			      		<td><%= f.text_field :FirstName %></td>
			      		<td><%= f.text_field :LastName %></td>
			      	</tr>
			      	
			      	<tr id="labels"><td>Email</td></tr>
			      	<tr><td><%= f.text_field :Email %></td></tr>
			      	      
				    <tr>
				    	<td><%= f.submit "Create User", class: "btn btn-large btn-primary" %></tr>
				    </td>			    		
		      	</table>
	    <% end %>
	</form>
	
	<body OnLoad="document.checkout.FirstName.focus()" />
	
	<br />
	
	<div id="navbar">
		<a href="/"><button id="small_button">Home</button></a>
		<a href="/manage"><button id="small_button">Return</button></a>
	</div>


