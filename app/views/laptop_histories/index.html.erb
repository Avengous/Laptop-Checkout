<% provide(:title, 'History') %>
<style>		
		h1 {
			text-align: center;
			font-family: arial;
			font-size: 20px;
		}
		
		table {
			border-collapse: collapse;
			width: 0 auto;
			margin: 0 auto;
			empty-cells: show;	
		}
		
		table tr th {
			border-bottom: 2px solid black;
		}
		
		table tr {
			text-align: left;
		}
		
		td, th {
			padding-right: 10px;
			padding-left: 10px;
			width: 0 auto;
		}	
		
		#navbar {
			width: 0 auto;
			margin: 0 auto;
			float: left;
		}
		#navbar2 {
			width: 0 auto;
			margin: 0 auto;
			float: right;
		}
		
		#spacing {
			padding-right: 20px;
			padding-left: 20px;
		}
		
		#id {
			text-align: center;
		}
		
		#bottom_border {
			border-top: 2px solid black;
			padding-top: 5px;
		}
		a { color: #000; }
		a:visited { color: #000; }
		a:hover { color: #fff; background-color:#000; }
</style>
<br />
<header id="logo"></header>

<h1>Laptop History</h1>

<table>
  <thead>
    <tr>
      <th>Laptop</th>
      <th>User</th>
      <th>Checked Out</th>
      <th>Checked In</th>
    </tr>
  </thead>

  <tbody>
    <% @laptop_histories.each do |laptop_history| %>
      <tr>
      	<td id="name_td2"><%= LaptopsController.new.find_laptop_by_id(laptop_history.laptop_id.to_i) %> </td>
    	<td>
	    	<%= link_to TransactionsController.new.history_report(laptop_history.transaction_id.to_i, 3),
	    		:controller => "user_histories",
	    		:action => "search",
	    		:user_id => TransactionsController.new.history_report(laptop_history.transaction_id.to_i, 5) %>
    	</td>
        <td id="time_td"><%= TransactionsController.new.history_report(laptop_history.transaction_id.to_i, 1) %></td>
        <td id="time_td"><%= TransactionsController.new.history_report(laptop_history.transaction_id.to_i, 2) %></td>
      </tr>
    <% end %>
  </tbody>
  
  <tr>
  	<td id="bottom_border">
  		<div id="navbar">
			<a href="/status"><button id="small_button">Back</button></a>
		</div>
  	</td>
  	<td id="bottom_border"></td>
  	<td id="bottom_border"></td>
  	<td id="bottom_border">
  		<div id="navbar2">
			<a href=<%= root_path %>><button id="small_button">Home</button></a>
		</div>
  	</td>
  </tr>
  
</table>
<br>